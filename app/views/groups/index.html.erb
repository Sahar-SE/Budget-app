<div class="container d-flex flex-column justify-content-center align-items-center">
  <% @groups.each do |group| %>
    <%= render partial: 'groups/group_card', locals: { group: group } %>
  <% end %>

  <% if @groups.empty? %>
  <h1>There are no categories to show</h1>
  <% end %>

  <%= link_to "Add New Category", new_group_path, class: "btn btn-success mb-5" %>

</div>