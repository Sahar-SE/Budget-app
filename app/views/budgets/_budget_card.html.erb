<div class="container">
  <table class="table table-striped", style="text-align: center;">
    <thead>
      <tr>
        <th>No.</th>
        <th>Name</th>
        <th>Amount</th>
      </tr>
    </thead>
    <tbody>
      <% @group.budgets.each_with_index do |budget, index| %>
        <tr>
          <td><%= index + 1 %></td>
          <td><%= budget.name %></td>
          <td>$ <%= budget.amount %></td>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
    </div>
</div>